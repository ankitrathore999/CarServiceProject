<div class="container">
  <div class="mask d-flex align-items-center h-100 gradient-custom-3">
    <div class="container h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-12 col-md-9 col-lg-7 col-xl-6">
          <div class="card" style="border-radius: 15px;">
            <div class="card-body p-5">
              <%= form_for @user, url: {action: :create} do |f| %>
                <% flash.each do |type, msg| %>
                  <div class="alert alert-info">
                    <%= msg %>
                  </div>
                <% end %>
                <div class="form-outline mb-4">
                  <label>User Name</label>
                  <%= f.text_field :name, required: true%>
                </div>
                <div class="form-outline mb-4">
                  <label>Email</label>
                  <%= f.text_field :email,required: true %>
                </div>
                <div class="form-outline mb-4">
                  <label>Password</label>
                  <%= f.password_field :password,required: true %>
                </div>
                <div class="form-outline mb-4">
                  <label>Contact</label>
                  <%= f.text_field :contact,required: true %>
                </div>
              <%= f.fields_for :address do |a| %>
                <div class="form-outline mb-4">
                  <label>City</label>
                  <%= a.text_field :city,required: true%>
                </div>
                <div class="form-outline mb-4">
                  <label>Location</label>
                  <%= a.text_field :location,required: true %>
                </div>
                <div class="form-outline mb-4">
                  <label>House_no</label>
                  <%= a.text_field :house_no ,required: true%>
                </div>
              <% end %>
                <div  class="form-outline mb-4">
                  <%= f.label  :Role %>
                  <%= f.select :role, ["customer","mechanic","admin"] %>
                </div><br>
                <div class="btn btn-success btn-block btn-lg gradient-custom-2 text-body">
                  <%= f.submit 'Create user',{ controller: 'users', action: 'index'} %>
                </div>
              <% end %>
              <%= link_to "LogIn?",new_session_path %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


