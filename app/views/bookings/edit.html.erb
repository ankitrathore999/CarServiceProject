<div class="container" align="center">
  <%= form_for @booking, url: {action: :update} do |f| %>   
    <div>   
      <label>Issue</label>   
      <%= f.text_field :issue %>   
    </div>   
    <div>   
      <%= link_to 'Back', { controller: 'bookings', action: 'index'} %>   
      <%= f.submit 'Update booking' %>   
    </div>   
  <% end %>   
</div>  
